    <div class="col-md-6">
        <h2>Ubicación</h2> 
        <div id="map" style="width: 550px; height: 300px" class="img-responsive"></div> 
        <script>
            function initMap() {
                var myLatLng = { lat: -32.9582995, lng: -60.6678651 };
                // Create a map object and specify the DOM element for display.
                var map = new google.maps.Map(document.getElementById('map'), {
                    center: myLatLng,
                    scrollwheel: false,
                    zoom: 13
                });
                
                var pinColor = "ff0000";
                 var pinImage = new google.maps.MarkerImage("http://chart.apis.google.com/chart?chst=d_map_pin_letter&chld=%E2%80%A2|" + pinColor,
                 new google.maps.Size(21, 34),
                 new google.maps.Point(0, 0),
                 new google.maps.Point(10, 34));
                //// Create a marker and set its position.
                var marker = new google.maps.Marker({
                    map: map,
                    position: myLatLng,
                    icon: pinImage,
                    title:
                             'Gym - Training Time'
                });
            }
        </script>

        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDY3nuKrpIo2AaOE6tjjc7tSsxIYzLtXFo&callback=initMap" async defer></script>
    </div>
</div>
